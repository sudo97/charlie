<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <style>{{css}}</style>
  </head>
  <body>
    <div class="container">
      <h1>{{title}}</h1>
      <h2>File-level Hotspots</h2>
      <div id="visualization" class="visualization">
        <!-- D3 visualization will be inserted here -->
      </div>

      <h2>Grouped Hotspots</h2>
      <div id="grouped-hotspots" class="visualization">
      </div>

      <h2>Coupled Pairs</h2>
      <div id="coupled-pairs" class="visualization">
      </div>

      <div id="soc">
      </div>

      <h2>Word Count</h2>
      <div id="word-count">
      </div>
    </div>

    <!-- Inject report data -->
    <script id="data" type="application/json">
      {{{reportDataJson}}}
    </script>

    <script id="grouped-hotspots-data" type="application/json">
      {{{groupedHotspotsJson}}}
    </script>

    <script id="coupling-pairs" type="application/json">
      {{{coupledPairsJson}}}
    </script>

    <script id="soc-data" type="application/json">
      {{{socDataJson}}}
    </script>

    <script id="word-count-data" type="application/json">
      {{{wordCountJson}}}
    </script>
    
    <!-- Load the built frontend bundle -->
    <script type="module">
      {{{js}}}
    </script>
  </body>
</html> 