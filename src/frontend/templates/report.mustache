<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <style>{{css}}</style>
  </head>
  <body>
    <div id="app">
      <!-- React app will be mounted here -->
    </div>

    <!-- Inject report data -->
    <script id="data" type="application/json">
      {{{reportDataJson}}}
    </script>

    <script id="log-items-data" type="application/json">
      {{{logItemsJson}}}
    </script>

    <script id="word-count-data" type="application/json">
      {{{wordCountJson}}}
    </script>

    <script id="architectural-groups" type="application/json">
      {{{architecturalGroupsJson}}}
    </script>
    
    <!-- Load the built frontend bundle -->
    <script>
      window.reportTitle = "{{title}}";
    </script>
    <script type="module">
      {{{js}}}
    </script>
  </body>
</html> 