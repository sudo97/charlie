{
  "name": "charlie",
  "version": "0.1.0",
  "description": "A tool for analyzing and visualizing your git history. Based on ideas from 'Your Code as a Crime Scene' by Andrew M. Sutton.",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "charlie": "./dist/cli.js"
  },
  "scripts": {
    "execute": "node dist/index.js",
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "git",
    "analysis",
    "visualization",
    "code-quality",
    "metrics",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.1.0",
    "d3": "^7.8.5",
    "isomorphic-git": "^1.30.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.28.0",
    "@types/d3": "^7.4.3",
    "@types/node": "^20.10.6",
    "@vitest/coverage-v8": "^1.1.0",
    "@vitest/ui": "^1.1.0",
    "eslint": "^9.28.0",
    "globals": "^16.2.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.33.0",
    "vitest": "^1.1.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
